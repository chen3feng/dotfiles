[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
    whitespace = fix,space-before-tab,-tab-in-indent,trailing-space
    trustctime = false # Ignore ctime differences.
    autocrlf = input
    safecrlf = warn
    eol = lf
[apply]
    whitespace = warn
[alias]
    st = status
    sh = stash
    sp = stash pop
    co = checkout
    ci = commit
    cm = commit -m
    ca = commit --amend
    cn = commit --amend --no-edit
    br = branch -a
    ri = rebase -i
    ri10 = rebase -i HEAD~10
    df = diff
    k = !gitk
    last = log -1
    look = log --graph --pretty=format:'%Cred %h : %Creset%s %Cgreen(%cr) %C(blue)<%an>%C(yellow)%d %Creset' --date=relative
    l10k = log --graph --pretty=format:'%Cred %h : %Creset%s %Cgreen(%cr) %C(blue)<%an>%C(yellow)%d %Creset' --date=relative -10
[color]
    status = auto
    branch = auto
    diff = auto
    interactive = auto
    ui = true
    wtf = yes
    
[branch]
	autosetuprebase = always
[push]
	default = simple
